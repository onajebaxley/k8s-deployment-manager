{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./working",
    "rootDir": "./",
    "lib": [
      "es2015"
    ],

    /* Strict Type-Checking Options */
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "esModuleInterop": true
  },
  "include": [ "src/**/*.ts", "test/**/*.ts" ]
}
